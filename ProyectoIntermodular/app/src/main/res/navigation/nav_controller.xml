<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controller"
    app:startDestination="@id/loginActivity">
    <activity
        android:id="@+id/loginActivity"
        android:name="es.anafernandez.proyectointermodular.views.views.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/mainActivity"
        android:name="es.anafernandez.proyectointermodular.views.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <argument
            android:name="Profesor"
            app:argType="es.anafernandez.proyectointermodular.modelo.Profesor" />
    </activity>
    <fragment
        android:id="@+id/fragmentCalendario"
        android:name="es.anafernandez.proyectointermodular.views.FragmentCalendario"
        android:label="fragment_calendario"
        tools:layout="@layout/fragment_calendario" >
        <argument
            android:name="Profesor"
            app:argType="es.anafernandez.proyectointermodular.modelo.Profesor" />
        <action
            android:id="@+id/deCalendarioAGuardias"
            app:destination="@id/fragmentGuardias" />
        <action
            android:id="@+id/deCalendarioAAvisos"
            app:destination="@id/fragmentAviso" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAviso"
        android:name="es.anafernandez.proyectointermodular.views.FragmentAviso"
        android:label="fragment_aviso"
        tools:layout="@layout/fragment_aviso" >
        <action
            android:id="@+id/deAvisoAHoras"
            app:destination="@id/fragmentHoras" />
        <argument
            android:name="Profesor"
            app:argType="es.anafernandez.proyectointermodular.modelo.Profesor" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGuardias"
        android:name="es.anafernandez.proyectointermodular.views.FragmentGuardias"
        android:label="fragment_guardias"
        tools:layout="@layout/fragment_guardias" >
        <argument
            android:name="Profesor"
            app:argType="es.anafernandez.proyectointermodular.modelo.Profesor" />
        <argument android:name="Fecha" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHoras"
        android:name="es.anafernandez.proyectointermodular.views.FragmentHoras"
        android:label="fragment_horas"
        tools:layout="@layout/fragment_horas" >
        <argument
            android:name="Horario"
            app:argType="es.anafernandez.proyectointermodular.modelo.Horario" />
    </fragment>
</navigation>